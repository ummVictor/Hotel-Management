<!DOCTYPE html>
<html>
<head>
  <title>Occupied Rooms</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f7f7f7;
      text-align: center;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }
    h1 {
      color: #333;
      margin-bottom: 20px;
    }
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      text-align: left;
    }
    li {
      margin-bottom: 10px;
    }
    .btn {
      display: inline-block;
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      text-decoration: none;
      transition: background-color 0.3s ease;
      margin-right: 10px;
    }
    .btn:last-child {
      margin-right: 0;
    }
    .btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Occupied Rooms</h1>
    <ul>
      <% occupiedRooms.forEach(room => { %>
        <li>Room <%= room.room_number %> - <%= room.guest_name %></li>
      <% }); %>
    </ul>
    <a class="btn" href="/checkin">Check In</a>
    <a class="btn" href="/checkout">Check Out</a>
    <a class="btn" href="/support">Support</a>
  </div>
</body>
</html>
